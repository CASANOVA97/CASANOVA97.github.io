<script>
	// 图片放大功能
	function openImageModal(src: string, caption: string) {
		const modal = document.getElementById('imageModal');
		const modalImg = document.getElementById('modalImage') as HTMLImageElement;
		const modalCaption = document.getElementById('modalCaption');
		
		if (modal && modalImg && modalCaption) {
			modal.classList.add('show');
			modalImg.src = src;
			modalCaption.textContent = caption;
			
			// 防止背景滚动
			document.body.style.overflow = 'hidden';
		}
	}

	function closeImageModal() {
		const modal = document.getElementById('imageModal');
		if (modal) {
			modal.classList.remove('show');
			
			// 恢复背景滚动
			document.body.style.overflow = 'auto';
		}
	}

	// 等待DOM加载完成后添加事件监听器
	document.addEventListener('DOMContentLoaded', function() {
		console.log('DOM loaded, setting up image zoom functionality');
		
		// 为所有可放大的图片添加点击事件
		document.addEventListener('click', function(e) {
			const target = e.target as HTMLElement;
			if (!target) return;
			
			console.log('Click detected on:', target);
			console.log('Classes:', target.classList);
			
			// 检查点击的元素是否是图片或者包含图片的容器
			let imgElement: HTMLImageElement | null = null;
			let caption = '';
			
			if (target.tagName === 'IMG' && target.classList.contains('zoomable-image')) {
				// 直接点击图片
				imgElement = target as HTMLImageElement;
				caption = target.getAttribute('data-caption') || target.getAttribute('alt') || '';
			} else if (target.classList.contains('tool-screenshot')) {
				// 点击了图片容器，查找其中的图片
				const img = target.querySelector('img.zoomable-image') as HTMLImageElement;
				if (img) {
					imgElement = img;
					caption = img.getAttribute('data-caption') || img.getAttribute('alt') || '';
				}
			}
			
			if (imgElement) {
				console.log('Zoomable image found!');
				const src = imgElement.src;
				console.log('Opening modal with src:', src, 'caption:', caption);
				openImageModal(src, caption);
			}
		});

		// 点击模态框背景关闭
		const modal = document.getElementById('imageModal');
		if (modal) {
			modal.addEventListener('click', function(e) {
				if (e.target === this) {
					closeImageModal();
				}
			});
		}
	});

	// ESC键关闭模态框
	document.addEventListener('keydown', function(e) {
		if (e.key === 'Escape') {
			closeImageModal();
		}
	});
</script>

