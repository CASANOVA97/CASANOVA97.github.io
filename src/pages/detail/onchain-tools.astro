<script is:inline>
	// 侧边目录滚动高亮 - 客户端脚本
	(function() {
		function initTOC() {
			const tocLinks = document.querySelectorAll('.toc-link');
			const sections = document.querySelectorAll('h2[id]');
			
			if (!tocLinks.length || !sections.length) {
				console.log('TOC elements not found');
				return;
			}
			
			console.log('TOC initialized with', tocLinks.length, 'links and', sections.length, 'sections');
			
			function highlightTOC() {
				let currentSection = '';
				const scrollPosition = window.pageYOffset + 200;

				sections.forEach(section => {
					const rect = section.getBoundingClientRect();
					const sectionTop = rect.top + window.pageYOffset;
					
					if (scrollPosition >= sectionTop - 100) {
						currentSection = section.getAttribute('id');
					}
				});

				tocLinks.forEach(link => {
					link.classList.remove('active');
					if (link.getAttribute('href') === '#' + currentSection) {
						link.classList.add('active');
					}
				});
			}

			// 滚动监听
			let ticking = false;
			window.addEventListener('scroll', function() {
				if (!ticking) {
					window.requestAnimationFrame(function() {
						highlightTOC();
						ticking = false;
					});
					ticking = true;
				}
			});

			// 点击跳转 - 多种方法尝试
			tocLinks.forEach(function(link) {
				link.addEventListener('click', function(e) {
					e.preventDefault();
					e.stopPropagation();
					
					const targetId = this.getAttribute('href').replace('#', '');
					const targetElement = document.getElementById(targetId);
					
					console.log('Clicked link to:', targetId, 'Element found:', !!targetElement);
					
					if (targetElement) {
						const headerOffset = 120;
						
						// 方法1: 使用 scrollIntoView
						try {
							const yOffset = -headerOffset;
							const y = targetElement.getBoundingClientRect().top + window.pageYOffset + yOffset;
							
							console.log('Current scroll:', window.pageYOffset, 'Target Y:', y);
							
							// 直接使用 scrollIntoView
							targetElement.scrollIntoView({ 
								behavior: 'smooth',
								block: 'start'
							});
							
							// 微调位置以考虑header
							setTimeout(function() {
								window.scrollBy({
									top: -headerOffset,
									behavior: 'smooth'
								});
							}, 100);
							
						} catch (err) {
							console.error('Scroll error:', err);
							// 降级方案：直接设置位置
							const rect = targetElement.getBoundingClientRect();
							const offsetTop = rect.top + window.pageYOffset;
							document.documentElement.scrollTop = offsetTop - headerOffset;
							document.body.scrollTop = offsetTop - headerOffset;
						}
						
						// 更新URL
						if (history.pushState) {
							history.pushState(null, null, '#' + targetId);
						}
					}
				});
			});

			// 初始化高亮
			setTimeout(highlightTOC, 100);

			// 页面加载时处理hash
			if (window.location.hash) {
				setTimeout(function() {
					const targetId = window.location.hash.replace('#', '');
					const targetElement = document.getElementById(targetId);
					if (targetElement) {
						const rect = targetElement.getBoundingClientRect();
						const offsetTop = rect.top + window.pageYOffset;
						window.scrollTo({
							top: offsetTop - 120,
							behavior: 'smooth'
						});
					}
				}, 500);
			}
		}

		// 确保DOM完全加载
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', initTOC);
		} else {
			initTOC();
		}

		// Astro页面转换后重新初始化
		document.addEventListener('astro:page-load', initTOC);
	})();
</script>

