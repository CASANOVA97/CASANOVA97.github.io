---
import BaseLayout from '../layouts/BaseLayout.astro';
import Cards from "../components/Cards.astro";
import SectionHeader from "../components/SectionHeader.astro";
import {pageTag, pageDescription,homeTdk} from '../data/content';
---

<BaseLayout
title={homeTdk.title  || ''}
description ={homeTdk.description  || ''}
keywords = {homeTdk.keywords  || ''}
>
	<div class="section hero">
		<div class="container">
			<SectionHeader
				tag={pageTag.index}
				description={pageDescription.index}>
					<svg
  class="title-svg"
  viewBox="0 0 960 240"
  xmlns="http://www.w3.org/2000/svg"
  role="img"
  aria-label="投研社"
>
  <!-- 阴影/笔锋厚度（可选） -->
  <defs>
    <filter id="soft" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="1.2" result="blur"/>
      <feOffset dx="0" dy="0" result="offset"/>
      <feMerge>
        <feMergeNode in="offset"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>

  <rect width="100%" height="100%" fill="none"/>
  <text
    x="50%" y="56%"
    text-anchor="middle"
    dominant-baseline="middle"
    filter="url(#soft)"
    style="
      font-family: 'MaShanZheng','STKaiti','KaiTi','Noto Serif SC','Songti SC',serif;
      font-weight: 700;
      font-size: 140px;
      letter-spacing: .06em;
      fill: var(--color-100);
    "
  >
    投研社
  </text>
</svg>

			</SectionHeader>
			<Cards />
		</div>
	</div>

</BaseLayout>



